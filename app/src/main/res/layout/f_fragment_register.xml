<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RegisterFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout.Fragments.RegisterFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/NameFiled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/text_field_style"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/EmailFieldRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/text_field_style"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:id="@+id/PasswordFieldRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/text_field_style"
            android:ems="10"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/checkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have an account ? "
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/checkButton"
                    style="@android:style/Widget.Material.Button.Borderless"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textSize="14dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/LightBlue"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/button_style"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/White"
                />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>